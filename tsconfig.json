{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true,
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@constants/*": [
        "./src/common/constants/*"
      ],
      "@filters/*": [
        "./src/common/filters/*"
      ],
      "@guards/*": [
        "./src/common/guards/*"
      ],
      "@pipes/*": [
        "./src/common/pipes/*"
      ],
      "@interfaces/*": [
        "./src/common/interfaces/*"
      ],
      "@interceptors/*": [
        "./src/common/interceptors/*"
      ],
      "@decorators/*": [
        "./src/common/decorators/*"
      ],
      "@exceptions/*": [
        "./src/common/exceptions/*"
      ],
      "@utils/*": [
        "./src/common/utils/*"
      ]
    }
  }
}
